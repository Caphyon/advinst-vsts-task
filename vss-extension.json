{
  "manifestVersion": 1,
  "id": "AdvancedInstaller-BuildTask",
  "version": "3.0.1",
  "name": "Advanced Installer Build",
  "description": "Task for building setup packages using Advanced Installer.",
  "publisher": "caphyon",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "categories": [
    "Azure Pipelines"
  ],
  "tags": [
    "build",
    "setup",
    "advanced installer",
    "msi",
    "appv",
    "appx"
  ],
  "branding": {
    "color": "rgb(239, 237, 233)",
    "theme": "light"
  },
  "links": {
    "home": {
      "uri": "https://www.advancedinstaller.com"
    },
    "learn": {
      "uri": "http://www.advancedinstaller.com/features.html"
    },
    "support": {
      "uri": "http://www.advancedinstaller.com/support.html"
    },
    "repository": {
      "uri": "https://github.com/Caphyon/advinst-vsts-task/"
    },
    "issues": {
      "uri": "https://github.com/Caphyon/advinst-vsts-task/issues/"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/Caphyon/advinst-vsts-task/"
  },
  "icons": {
    "default": "images/advinst-logo.png"
  },
  "content": {
    "details": {
      "path": "README.md"
    },
    "license": {
      "path": "LICENSE.md"
    },
    "changelog": {
      "path": "CHANGELOG.md"
    }
  },
  "galleryFlags": [
    "Private"
  ],
  "galleryProperties": [
    {
      "markdownItParser": true
    }
  ],
  "files": [
    {
      "path": "dist/v2",
      "packagePath": "task/v2"
    },
    {
      "path": "dist/v3",
      "packagePath": "task/v3"
    },
    {
      "path": "images",
      "addressable": true
    },
    {
      "path": "README.md",
      "addressable": true
    },
    {
      "path": "LICENSE.md",
      "addressable": true
    }
  ],
  "contributions": [
    {
      "id": "Caphyon.AdvancedInstaller.BuildTask",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "task"
      }
    }
  ]
}